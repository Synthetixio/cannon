{
  "name": "hardhat-cannon",
  "version": "0.2.2",
  "description": "Agnostic chain construction. Select the protocols and configuration you need to quickly and easily verify your project",
  "repository": "github:Synthetixio/cannon",
  "author": "Synthetix",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc && cp -r src/abis dist/src/abis",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@types/chai": "^4.3.0",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.179",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.0.0",
    "@types/tar-fs": "^2.0.1",
    "@types/tar-stream": "^2.2.2",
    "bn.js": "^5.2.0",
    "hardhat": "^2.9.1",
    "mocha": "^9.2.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
